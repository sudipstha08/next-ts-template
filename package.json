{
  "name": "next-ts-template",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start-dev": "next dev",
    "build": "next build",
    "start": "next start",
    "next:lint": "next lint",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0 --fix",
    "fix": "yarn lint:ts --fix",
    "git-add": "git add .",
    "typecheck": "tsc-files --noEmit",
    "postformat": "prettier . --write",
    "lint:css": "npx stylelint --ignore-path .gitignore '**/*.{css,js,tsx,ts}'",
    "lint-staged": "lint-staged",
    "prepare": "husky"
  },
  "dependencies": {
    "axios": "^1.7.2",
    "next": "14.2.4",
    "react": "^18",
    "react-dom": "^18"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@commitlint/types": "^19.0.3",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@typescript-eslint/eslint-plugin": "^7.13.1",
    "@typescript-eslint/parser": "^7.13.1",
    "eslint": "^8",
    "eslint-config-next": "14.2.4",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.7",
    "postcss": "^8",
    "pre-commit": "^1.2.2",
    "prettier": "^3.3.2",
    "stylelint": "^16.6.1",
    "stylelint-config-standard": "^36.0.0",
    "tailwindcss": "^3.4.1",
    "typescript": "^5"
  }
}
